#!/usr/bin/env node

process.title = 'aws disaster recovery'

var resolve  = require('resolve');
var basepath = process.cwd();

resolve('aws-disaster-recovery', {
  basedir: basepath
}, function(err, localCLI) {

  var CLI;
  if (err) {
    CLI = require('../lib/cli');
  } else {
    CLI = require(localCLI);
  }

  var cli = new CLI(process.argv.slice(2));

  cli.command();
});
